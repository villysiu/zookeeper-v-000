<%= form_for health_checkup do |f| %>
    <%= f.hidden_field :animal_id, :value => @animal.id %>
    <%= f.hidden_field :user_id,:value => current_user.id %>
    <%= f.hidden_field :date, :value => Date.today %>
    <%= f.label "Comment:" %>
    <%= f.text_area :comments, autofocus: true, placeholder: "Leave your comment" %>
    <%= f.submit "Send" %>

  <% end %>
